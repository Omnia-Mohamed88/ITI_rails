<% @posts.each do |post| %>
    <div>
    <h1> <%= post.title %>
    </h1>
    <h3>
    <%= post.content %>
    </h3>
    <%= link_to "Edit", edit_post_path(post) %>
    
    <%= button_to "Delete", delete_post_path(post), method: :delete%>
    <a href="<%= post_path(post) %>">Show</a>
    
    
    </div>
    <% end %>